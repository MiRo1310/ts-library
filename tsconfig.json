{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "rootDir": "src",
    /* Bundler mode */
    "moduleResolution": "bundler",   
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",    
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vitest.config.ts",
    "tsconfig.tsbuildinfo"
  ], 
}
